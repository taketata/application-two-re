<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <%= image_tag @user.get_image %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>中身</th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to user_path(@user.id),class:"btn btn-outline-secondary btn-block",method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>

      <%= form_with model:@book do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <%=f.text_field:title,class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinon</label>
        <%=f.text_area:body,class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create book',class:"btn btn-success" %>
      </div>

      <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= image_tag user.get_image %></td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "Show",user_path(user.id) %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>

  </div>
</div>