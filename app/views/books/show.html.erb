<%= render 'list',user:@user %>

      <h2 class="mt-3">New book</h2>

      <%= form_with model:Book.new do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <%=f.text_field:title,class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinon</label>
        <%=f.text_area:body,class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create book',class:"btn btn-success" %>
      </div>

      <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>

        <table class="table table-hover table-inverse">

          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id),method: :get do %>
                  <%= image_tag @user.get_image %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id),method: :get do %>
                 <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%=link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？",class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
            </tr>
          </tbody>

        </table>
      </div>

  </div>
</div>